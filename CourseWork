#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* ReadSentence();

int main(){
	char** arr = malloc(10*sizeof(char*));
	int size = 10;
	int n = 0;
	char* s;
	while(1){
		s = ReadSentence();
		if(strcmp(s, " Dragon flew away!") == 0){
			break;
		}
		if(n == size -1){
			size += 10;
			arr = realloc(arr, sizeof(char*)*size);
		}
		n++;
	}
  for(int i = 0; i<n; i++){
		printf("%s\n", arr[i]);
	}
	for(int i = 0; i < n; i++){
		free(arr[i]);
	}
	free(arr);
	free(s);
	return 0;
}    
  
char* ReadSentence(){
	char* s = malloc(10*sizeof(char));
	int n = 0;
	char c;
	int size = 10;
	while((c = getchar()) && c != '!' && c != '.' && c != ';' && c != '?' && c != '\n'){
		if(n == (size-2)){
			size += 10;
			s = realloc(s, size);
		}
		s[n] = c;
		++n;
	}
	s[n] = c;
	s[n+1] = '\0';
	return s;
}
